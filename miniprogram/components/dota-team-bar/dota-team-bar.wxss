/* components/dota-team-bar/dota-team-bar.wxss */
.progress {
    display: flex;
    justify-content: center;
    flex-direction: column;
    height: 100%;
}

.progress-text {
    color: #0c9dfc;
    font-size: 12px;
    text-align: left;
    padding-bottom: 3px;
}

.progress-bar {
    width: 100%;
    height: 4px;
    border-radius: 2px;
    background: #d8d8d8;
}

.progress-fill {
    height: 100%;
    border-radius: 2px;
    /* background: linear-gradient(-45deg, #666 0%, #878787 100%); */
    background-image: linear-gradient(-45deg, #0fb3ff 0%, #72a9ec 100%);
}