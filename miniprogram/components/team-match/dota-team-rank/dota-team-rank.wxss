/* components/dota-team/dota-team.wxss */
@import '../../../app.wxss';

.text-describe {
  display: flex;
  align-items: center;
  padding: 5px 8px;
  color: #666;
  font-size: 14px;
  font-weight: 500;
  letter-spacing: 1px;
}

.team-tag {
  display: flex;
  align-items: center;
  height: 100%;
}

.team-tag-image-box {
  display: flex;
  align-items: center;
  height: 100%;
  padding-right: 5px;
}

.table-body-item {
  height: 50px;
  line-height: 50px;
}

.team-tag-text {
  font-size: 12px;
  max-width: 100%;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  line-height: normal;
}

.team-tag-text:first-child {
  color: #0c9dfc;
  margin-bottom: 3px;
}

.team-tag-box {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  width: calc(100% - 40px);
}

.team-tag-image {
  width: 30px;
  height: 30px;
}

.team-tag_logo {
  margin-bottom: 5px;
}

.team-tag-logo-box {
  display: flex;
  width: 100%;
  line-height: normal;
  align-items: center;
  margin-left: 5px;
}

.dropdown-menu {
  box-shadow: none !important;
  height: 40px !important;
  padding-right: 15px;
}
.dropdown-menu-title {
  font-size: 13px;
}