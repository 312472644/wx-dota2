/* components/team-data/team-data.wxss */
@import "../../../app.wxss";

.team-data {
  border-top: 10px solid #f3f2f7;
}

.text {
  color: #7a7a7a;
  font-size: 13px;
}

.value {
  color: #2b2b2b;
  font-size: 13px;
  padding-top: 10px;
}

.total-bonus {
  font-size: 15px;
  font-weight: bold;
}

.team-honor,
.team-transfer {
  border-top: 10px solid #f3f2f7;
}

.title {
  position: relative;
  color: #2b2b2b;
  font-size: 14px;
  padding: 15px 16px 0 16px;
}

.title::before {
  content: "";
  position: absolute;
  left: 0;
  top: 17px;
  width: 3px;
  height: 15px;
  background-color: #1f1f1f;
}

.team-transfer .title {
  padding-bottom: 10px;
}

.honor {
  display: flex;
  justify-content: flex-start;
  padding: 10px;
}

.honor-count {
  display: flex;
  align-items: flex-start;
  width: 80px;
}

.honor-list {
  display: flex;
  flex-direction: column;
  width: calc(100% - 80px);
}

.honor-item {
  color: #4e4e4e;
  font-size: 12px;
  padding-bottom: 10px;
}

.honor-count-text {
  color: #4e4e4e;
  display: inline-block;
  font-size: 13px;
  padding-left: 5px;
  vertical-align: middle;
  line-height: 36px;
}

.table-header {
  border: none;
  border-bottom: 1px solid #ebedf2;
}
.table-header-item {
  font-weight: normal;
  text-align: left;
}

.table-body-item {
  width: 25%;
  text-align: left;
}

.team-tag-image {
  vertical-align: middle;
}

.help-text {
  padding: 0 3px;
}

.medal-iamge {
  width: 36px;
  height: 36px;
  vertical-align: middle;
}