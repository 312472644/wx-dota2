/* components/hero-preview/hero-preview.wxss */
.hero-preview {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.pre-hero,
.next-hero {
    display: flex;
    align-items: center;
}

.pre-hero_image,
.next-hero_image {
    width: 180rpx;
    height: 130rpx;
}

.hero-text {
    font-size: 12px;
}

.hero-content {
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.all-hero {
    font-size: 12px;
    width: 49px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.all-hero-box {
    width: 15px;
    height: 15px;
    margin-bottom: 3px;
    background-color: #9e9fa0;
}

.all-hero-item {
    width: 100%;
    display: flex;
    justify-content: space-between;
}