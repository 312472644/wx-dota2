/* components/select-text/index.wxss */
.select-container {
  display: flex;
  align-items: center;
  padding: 0 12px;
}

.select-text:first-of-type {
  padding-left: 0;
}

.select-text {
  width: 80px;
  color: #787d7e;
  padding: 6px 0;
  margin: 0 12px 8px 0;
  border-radius: 3px;
  text-align: center;
  border: 1px solid #e6e6e6;
}

.select-text_active {
  color: #fff;
  border-color: #000;
  background-color: #000;
}