/* components/schedule-detail/schedule-rank/schedule-rank.wxss */
.schedule-rank {
  padding-top: 15px;
  border-top: 10px solid #f7f7f7;
}

.schedule-category {
  padding: 0 15px;
}

.schedule-category_text {
  display: inline-block;
  color: #808080;
  font-size: 12px;
  width: 50px;
}

.schedule-category_text.active {
  color: #050505;
}

.schedule-table {
  padding-top: 15px;
}

.schedule-table-header {
  display: flex;
  align-items: center;
  color: #808080;
  font-size: 12px;
  background: #f7f7f7;
  height: 40px;
  line-height: 40px;
}

.schedule-table_column.first-column {
  flex: 1.2;
}

.category-column {
  width: 100px;
  text-align: center;
}

.schedule-table_column {
  flex: 1;
  text-align: center;
}

.schedule-table-body {
  display: flex;
}

.sidebar {
  width: 100px;
}

.sidebar-item {
  font-size: 12px;
  color: #808080;
  height: 40px;
  line-height: 40px;
  background: #fafafa;
  text-align: center;
  border-bottom: 1px solid #ececec;
  border-right: 1px solid #ececec;
}

.sidebar-item.active {
  background-color: #fff;
}

.schedule-table-content {
  flex: 1;
}

.schedule-table-row {
  display: flex;
  width: 100%;
  height: 40px;
  line-height: 40px;
}

.schedule-table-row .schedule-table_column {
  color: #292929;
  font-size: 12px;
  white-space: nowrap;
  overflow: hidden;
  max-width: 100%;
}

.schedule-table_text {
  display: inline-block;
  padding-left: 5px;
  font-size: 12px;
  vertical-align: middle;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  max-width: calc(100% - 20px);
}

.schedule-table-row-image {
  vertical-align: middle;
}

.column-index {
  font-size: 12px;
  padding-right: 5px;
}