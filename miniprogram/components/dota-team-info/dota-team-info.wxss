/* components/dota-team-info/dota-team-info.wxss */
@import "../../app.wxss";

.dota-team-info {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 12px 0;
    background-image: linear-gradient(to right, #1a2b3e, #141e30);
}

.dota-team {
    display: flex;
    flex-direction: column;
    color: #2d2f33;
}

.dota-team-logo {
    width: 80px;
    height: 80px;
    margin-right: 16px;
}

.radius {
    border-radius: 50%;
}

.dota-team_name {
    color: #f5f5f5;
    font-size: 20px;
    /* font-weight: bold; */
}

.dota-team_result {
    display: flex;
}

.dota-team_result_item {
    padding: 8px 8px 0 0;
}

.dota-team-item-text {
    display: inline-block;
    color: #ffffff8a;
    padding-bottom: 8px;
    font-size: 13px;
    width: 50px;
}

.dota-team-item-value {
    color: #ffffffde;
    font-size: 14px;
}