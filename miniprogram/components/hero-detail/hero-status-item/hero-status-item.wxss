/* components/hero-status-item/hero-status-item.wxss */
.hero-status-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    box-shadow: 0 2px 6px 0 rgb(2 5 13 / 5%);
}

.hero-status-item_value {
    width: 100%;
    color: #fff;
    padding: 3px 0;
    height: 26px;
    line-height: 26px;
    font-size: 16px;
    font-style: italic;
    font-weight: bold;
    text-align: center;
    border-radius: 2px 2px 0 0;
    background: linear-gradient(45deg, #485563 0%, #29323c 100%);
}

.hero-status-item_text {
    padding: 3px 0;
    width: 100%;
    color: #646464;
    font-size: 12px;
    text-align: center;
    height: 24px;
    line-height: 22px;
    border: 1px solid #ebedf2;
    border-radius: 0 0 2px 2px
}