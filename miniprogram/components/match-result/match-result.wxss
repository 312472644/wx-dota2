/* components/match-result/match-result.wxss */
@import "../../app.wxss";

.match-detail-result {
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding: 18px 0;
  font-size: 14px;
  background-image: linear-gradient(to right, #1a2b3e, #141e30);
}

.match-team {
  font-size: 14px;
  padding: 5px;
  box-sizing: border-box;
}

.match-team.win {
  background: linear-gradient(to right, #a7c32a00 0%, #81923c00 5%, #13522c4d 50%, #60ec080d 87%, #ffffff00 100%);
}

.match-team.lose {
  background: linear-gradient(to right, #75843400 0%, #81923c00 5%, #6f221a4d 50%, #ff47000d 87%, #ffffff00 100%);
}

.match-score {
  color: #fff;
  display: flex;
  align-items: center;
}

.match-score-item {
  font-size: 20px;
}

.match-game {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 0 10px;
  font-size: 12px;
}

.match-info-item {
  display: flex;
  flex-direction: column;
}

.match-game-mode-time {
  padding-top: 3px;
}

.match-info-item_label {
  color: #ffffff99;
  font-size: 12px;
}

.match-info-item_value {
  color: #fff;
  padding-top: 3px;
}