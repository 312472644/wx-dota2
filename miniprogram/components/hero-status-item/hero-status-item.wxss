/* components/hero-status-item/hero-status-item.wxss */
.hero-status-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    box-shadow: 0 2px 6px 0 rgb(2 5 13 / 5%);
}

.hero-status-item_value {
    width: 100%;
    color: #fff;
    height: 26px;
    line-height: 26px;
    font-size: 18px;
    font-style: italic;
    font-weight: bold;
    text-align: center;
    border-radius: 2px 2px 0 0;
    background-image: linear-gradient(45deg, #212121 0%, #5f5f5f 100%);
}

.hero-status-item_text {
    width: 100%;
    color: #646464;
    font-size: 13px;
    text-align: center;
    height: 24px;
    line-height: 22px;
    border: 1px solid #ebedf2;
    border-radius: 0 0 2px 2px
}