/* components/progress-bar/progress-bar.wxss */
.progress-bar {
  display: flex;
  flex-direction: column;
}

.progress-text {
  font-size: #333;
  padding-bottom: 5px;
}

.progress {
  position: relative;
  width: 100%;
  height: 6px;
  border-radius: 10px;
  background-color: #3d3f4a;
}

.current-progress {
  position: absolute;
  left: 0;
  height: 6px;
  border-radius: 10px;
}