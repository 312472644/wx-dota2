/* components/game-list/game-list.wxss */
.game-header {
  background: #f7f7f7;
  padding: 0 10px;
  height: 50px;
  line-height: 50px;
  position: sticky;
  top: 0;
  z-index: 9;
}

.game-date {
  color: #666;
  font-size: 14px;
}

.game-name {
  display: flex;
  align-items: center;
  height: 40px;
  border-bottom: 1px solid #f2f2f2;
}

.game-body {
  background: #fff;
  padding: 0 10px;
}

.game-name-text {
  color: #666;
  font-size: 13px;
  margin-left: 5px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.game-team-item {
  display: flex;
  align-items: center;
  height: 80px;
  border-bottom: 1px solid #f2f2f2;
}
.game-team-box {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  height: 50px;
}
.game-team-middle {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  height: 50px;
}

.game-score {
  font-weight: bold;
  font-size: 13px;
  margin-top: 10px;
}

.game-status {
  font-size: 13px;
  color: #999;
}

.default-image {
  width: 30px;
  height: 30px;
}

.game-list-item {
  border-bottom: 10px solid #f3f2f8;
}

.filter-title {
  display: flex;
  text-align: center;
  font-size: 13px;
  color: #666;
  line-height: 45px;
  padding: 8px 0;
}

.text-item {
  flex: 1;
}

.text-item:nth-of-type(1) {
  text-align: left;
  padding-left: 20px;
}

.text-item:nth-of-type(3) {
  color: #1989fa;
  text-align: right;
  padding-right: 20px;
}

.filter-body {
  padding: 10px 20px;
}

.filter-item {
  margin-bottom: 10px;
}

.filter-title-text {
  color: #666;
  font-size: 13px;
  height: 30px;
  line-height: 30px;
}

.filter-content {
}

.button {
  margin-right: 10px;
}

.match-dropdown {
  box-shadow: none !important;
}
