<!--pages/hero-goods/hero-goods.wxml-->
<view class="hero-goods-container">
    <van-tabs color="#000000" title-inactive-color="#787d7e" sticky="true" bind:change="changeEvent">
        <pull-refresh id="pull-refresh" bindpulldown="pulldownEvent">
            <van-tab title="商店物品">
                <goods-item title="基础分类" wx:if="{{baseCategory}}" categoryList="{{baseCategory}}" bindcategory="perviewCategory"></goods-item>
                <goods-item title="合成分类" wx:if="{{upgradeCategory}}" categoryList="{{upgradeCategory}}" bindcategory="perviewCategory"></goods-item>
            </van-tab>
            <van-tab title="中立物品">
                <goods-item title="中立物品" wx:if="{{neutralCategory}}" categoryList="{{neutralCategory}}" bindcategory="perviewCategory"></goods-item>
            </van-tab>
        </pull-refresh>
    </van-tabs>
    <dialog visible="{{dialogVisible}}" bindclose="closeDialog" categoryDetail="{{currentCategoryDetail}}"></dialog>
</view>